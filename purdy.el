(defun purdy-frac (d)
  (if (< d 110)
    0.0
    (let* ((laps (floor d 400.0))
	   (meters (- d (* 400.0 laps)))
	   (partlap
	    (cond
	     ((<= meters 50)	0)
	     ((<= meters 150)	(- meters 50))
	     ((<= meters 250)	100)
	     ((<= meters 350)	(+ 100 meters -250))
	     ((<= meters 400)	200))))
      (/ (+ (* laps 200) partlap) d))))

