(defun bernstein (i u)
  (let ((u* (- 1 u)))
    (ecase i
      (0	(expt u* 3))
      (1	(* 3 u u* u*))
      (2	(* 3 u u u*))
      (3	(expt u 3)))))

(defun q (patch u v)
  (loop for k below 3 collect
       (loop for i to 3 sum
	    (loop for j to 3
	       for n = (+ i (* j 4)) sum
		 (* (nth k (nth (1- (nth n patch)) *teapot-vertices*))
		    (bernstein i u)
		    (bernstein j v))))))
